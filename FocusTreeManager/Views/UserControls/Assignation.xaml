<UserControl
    Height="30"
    mc:Ignorable="d"
    x:Class="FocusTreeManager.Views.UserControls.Assignation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
                <ResourceDictionary Source="/FocusTreeManager;component/Languages/zh_CN.xaml" x:Name="LocalizationStrings" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <Border
                Background="{Binding BorderColor}"
                BorderBrush="{Binding BorderColor}"
                BorderThickness="1"
                CornerRadius="5"
                DockPanel.Dock="Left"
                Width="100">
                <TextBlock
                    FontFamily="Courier New"
                    FontSize="11"
                    Foreground="{Binding Color}"
                    Margin="5,0,15,0"
                    Text="{Binding Text}"
                    TextWrapping="Wrap"
                    VerticalAlignment="Center" />
            </Border>
            <Border
                Background="{Binding BackgroundColor}"
                BorderBrush="{Binding BorderColor}"
                BorderThickness="1"
                CornerRadius="5"
                DockPanel.Dock="Left"
                Margin="-10,0,0,0">
                <TextBox
                    Background="{Binding BackgroundColor}"
                    BorderThickness="0"
                    CaretBrush="{Binding Color}"
                    DockPanel.Dock="Right"
                    FontFamily="Courier New"
                    FontSize="11"
                    Foreground="{Binding Color}"
                    Height="20"
                    IsReadOnly="{Binding IsNotEditable, Mode=OneWay}"
                    KeyDown="TextBox_KeyDown"
                    Margin="5,0,5,0"
                    MouseEnter="TextBox_MouseEnter"
                    MouseLeave="TextBox_MouseLeave"
                    Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center" />
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
