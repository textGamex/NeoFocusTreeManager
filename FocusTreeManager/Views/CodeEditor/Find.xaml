<UserControl
    Height="180"
    Width="400"
    mc:Ignorable="d"
    x:Class="FocusTreeManager.Views.CodeEditor.Find"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
                <ResourceDictionary Source="/FocusTreeManager;component/Languages/zh_CN.xaml" x:Name="LocalizationStrings" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Border}" x:Key="FadeOutControl">
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Control.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Opacity"
                                    To="1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Control.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Opacity"
                                    To="0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border
        Background="{DynamicResource WhiteBrush}"
        BorderBrush="{DynamicResource SolidColorBrush}"
        BorderThickness="1"
        Opacity="1"
        Style="{StaticResource FadeOutControl}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="75" />
                <RowDefinition Height="75" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*" />
                <ColumnDefinition Width="30*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2" Grid.Row="0">
                <TextBlock
                    Background="{DynamicResource AccentBaseColorBrush}"
                    FontWeight="Bold"
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    HorizontalAlignment="Stretch"
                    Padding="5"
                    Text="{DynamicResource Editor_Search}"
                    VerticalAlignment="Center"
                    x:Name="Header" />
            </StackPanel>
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="70*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label
                    Content="{DynamicResource Editor_Search}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" />
                <ComboBox
                    Grid.Column="1"
                    Grid.Row="0"
                    IsEditable="True"
                    ItemsSource="{Binding SearchHistory}"
                    Margin="5"
                    x:Name="ComboFind" />
                <Label
                    Content="{DynamicResource Editor_Find_Occurences}"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="0,0,25,0"
                    VerticalAlignment="Center"
                    Visibility="Hidden"
                    x:Name="OccurencesLabel" />
                <Label
                    Content=""
                    Grid.Column="2"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Visibility="Hidden"
                    x:Name="CountLabel" />
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    Click="NextButton_Click"
                    Content="{DynamicResource Editor_Find_Next}"
                    Grid.Row="0"
                    Margin="5"
                    Style="{DynamicResource SquareButtonStyle}"
                    VerticalAlignment="Center"
                    x:Name="NextButton" />
                <Button
                    Click="CountButton_Click"
                    Content="{DynamicResource Editor_Find_Count}"
                    Grid.Row="1"
                    Margin="5"
                    Style="{DynamicResource SquareButtonStyle}"
                    VerticalAlignment="Center"
                    x:Name="CountButton" />
            </Grid>
            <Grid Grid.Column="0" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="90*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    x:Name="FullWordCheck" />
                <Label
                    Content="{DynamicResource Editor_Find_Word}"
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />
                <CheckBox
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    x:Name="CaseCheck" />
                <Label
                    Content="{DynamicResource Editor_Find_Case}"
                    Grid.Column="1"
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    Click="CancelButton_Click"
                    Content="{DynamicResource Command_Cancel}"
                    Grid.Row="0"
                    Margin="5"
                    Style="{DynamicResource SquareButtonStyle}"
                    VerticalAlignment="Center"
                    x:Name="CancelButton" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
